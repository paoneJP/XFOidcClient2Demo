<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFOidcClient2Demo.App">

    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="MonospaceFont" x:TypeArguments="x:String">
                <On Platform="iOS" Value="Menlo" />
                <On Platform="Android, UWP" Value="monospace" />
            </OnPlatform>
            <OnPlatform x:Key="PagePadding" x:TypeArguments="Thickness">
                <On Platform="iOS" Value="0,20,0,0" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>